<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_color"
            android:columnCount="3"
            android:rowCount="2">

    <Button
            android:layout_width="@dimen/game_button_width"
            android:layout_height="@dimen/game_button_height"
            android:text="A"
            android:textSize="@dimen/game_button_textSize"
            android:id="@+id/button_A"
            android:background="@drawable/a_button_selector"
            android:layout_row="0"
            android:layout_column="0"/>
    <Button
            android:layout_width="@dimen/game_button_width"
            android:layout_height="@dimen/game_button_height"
            android:text="B"
            android:textSize="@dimen/game_button_textSize"
            android:id="@+id/button_B"
            android:background="@drawable/b_button_selector"
            android:layout_row="0"
            android:layout_column="1"/>
    <Button
            android:layout_width="@dimen/game_button_width"
            android:layout_height="@dimen/game_button_height"
            android:text="C"
            android:textSize="@dimen/game_button_textSize"
            android:id="@+id/button_C"
            android:background="@drawable/c_button_selector"
            android:layout_row="1"
            android:layout_column="0"/>
    <Button
            android:layout_width="@dimen/game_button_width"
            android:layout_height="@dimen/game_button_height"
            android:text="D"
            android:textSize="@dimen/game_button_textSize"
            android:id="@+id/button_D"
            android:background="@drawable/d_button_selector"
            android:layout_row="1"
            android:layout_column="1"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:orientation="vertical"
            android:id="@+id/maxScore_layout">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/maxScore_text"
                android:textColor="@color/text_color"
                android:id="@+id/maxScore_text"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MAX"
                android:textColor="@color/text_color"
                android:id="@+id/maxScore_value"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/currScore_text"
                android:textColor="@color/text_color"
                android:id="@+id/currScore_text"/>
        
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MAX"
                android:textColor="@color/text_color"
                android:id="@+id/currScore_value"/>
    </LinearLayout>


</GridLayout>